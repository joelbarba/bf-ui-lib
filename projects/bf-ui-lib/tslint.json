{
  "extends": "../../tslint.json",
  "rules": {
    "no-trailing-whitespace": true,
    "directive-selector": [
      true,
      "attribute",
      "bf",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "bf",
      "kebab-case"
    ],
    "max-line-length": [
      true,
      {
        "limit": 300,
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-strings": true,
        "check-regex": true
      }
    ]
  }
}
